auto-reload yes
max-items 50

browser "xdg-open %u"
#browser "w3m %u"

unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

bind-key j down
bind-key k up
bind-key l open
bind-key h quit

#macro m set browser "mpv %u"; open-in-browser ; set browser "xdg-open %u"
#macro m set browser "mpv %u"; open-in-browser ; set browser "w3m %u"
